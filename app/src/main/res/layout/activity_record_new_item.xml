<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record_new_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical"
    tools:context="com.example.passwordprotecttest.RecordNewItemActivity">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="添加到分类 :"
                    android:textColor="@color/deepBlack"
                    android:textSize="22dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:theme="@android:style/Theme.Light">

                </Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="名称 :"
                android:textColor="@color/deepBlack"
                android:textSize="22dp" />


            <EditText
                android:id="@+id/name_et_new_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:maxLines="1" />


            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="网址 :"
                android:textColor="@color/deepBlack"
                android:textSize="22dp" />


            <EditText
                android:id="@+id/url_et_new_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:maxLines="1" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="账号 :"
                android:textColor="@color/deepBlack"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/account_et_new_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:maxLines="1" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="密码 :"
                android:textColor="@color/deepBlack"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/password_et_new_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:maxLines="1" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="备注 :"
                android:textColor="@color/deepBlack"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/commment_et_new_item"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:gravity="start" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/insertNewItem_bt_new_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_style"
        android:onClick="insertNewItem"
        android:text="确认无误，添加记录"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>
